<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".setting"
    android:background="@drawable/setting"
    tools:showIn="@layout/app_bar_setting">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="301dp"
        android:layout_marginBottom="451dp"
        android:text="Name :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/settingName"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="434dp"
        android:background="@drawable/txtview"
        android:hint="name"
        android:paddingLeft="30dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="283dp"
        android:layout_marginBottom="381dp"
        android:text="E-mail :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/settingEmail"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="364dp"
        android:background="@drawable/txtview"
        android:hint="e-mail"
        android:paddingLeft="30dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="238dp"
        android:layout_marginBottom="294dp"
        android:text="Old-Password :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/settingOldPassword"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="165dp"
        android:inputType="textPassword"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="273dp"
        android:background="@drawable/txtview"
        android:hint="password"
        android:paddingLeft="30dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="193dp"
        android:layout_marginBottom="221dp"
        android:text="New-password :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/settingNewPassword"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="177dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="203dp"
        android:inputType="textPassword"
        android:background="@drawable/txtview"
        android:hint="new-password"
        android:paddingLeft="30dp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnSettingChang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="123dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="113dp"
        android:background="@drawable/btnsubmit" />


</RelativeLayout>